<Window x:Class="Core.WordMarquee.WordMarqueeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Core.WordMarquee"
        mc:Ignorable="d"
        Title="WordMarqueeWindow" Topmost="True" Width="800" Height="800" ShowInTaskbar="True">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" x:Name="txtReport" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>

        <StackPanel x:Name="panel" Grid.Row="2">
            <!--<Canvas Height="100" Background="Yellow"/>-->
            <!--<Canvas Height="50" Background="Blue"/>-->
        </StackPanel>
    </Grid>
</Window>
