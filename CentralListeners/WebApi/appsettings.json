{
  "MarqueeText": {
    // The other settings are multiplied by scale (makes it easy to adjust size, keeping ratios)
    "Scale": 1,

    "FontSize_Min": 18,
    "FontSize_Max": 48,

    "Blur_Min": 3,
    "Blur_Max": 9,

    "Vertical_Padding": 4,

    // Natural speech is closer to -500.  This slower base speed allows more to be on screen when there
    // are bursts of text.  If it's continuous, the app will increase this to keep up
    "Speed": -150,

    "Screen_Bottom_Margin": 66,

    "SpeechLanes": [
      {
        "Name": "microphone",
        "Color": "FFF",
        "SortOrder": 0
      },
      {
        "Name": "llm",
        "Color": "#EBE7A2",
        "SortOrder": 1
      }
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
