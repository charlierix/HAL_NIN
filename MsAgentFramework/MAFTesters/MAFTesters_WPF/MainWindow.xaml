<Window x:Class="MAFTesters_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MAFTesters_WPF"
        Title="Microsoft Agents Tester" Background="{x:Static SystemColors.ControlBrush}" Width="800" Height="600" Loaded="Window_Loaded">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Button Content="weather example" Click="WeatherExample_Click"/>
            </StackPanel>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Prompt" VerticalAlignment="Center">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="-90"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                    <TextBox Grid.Column="2" x:Name="txtPrompt" AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                </Grid>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Log" VerticalAlignment="Center">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="-90"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                    <TextBox Grid.Column="2" x:Name="txtLog" AcceptsReturn="True" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                </Grid>
            </Grid>
        </Grid>

        <UniformGrid Grid.Row="2" Columns="2">
            <TextBox x:Name="txtOllamaURL" Text="http://127.0.0.1:11434" Margin="0,0,4,0"/>
            <!--<TextBox x:Name="txtModel" Text="devstral-small-2:24b" Margin="4,0,0,0"/>-->
            <ComboBox x:Name="cboModel">
                <ComboBox.Items>
                    <ComboBoxItem>ministral-3:8b</ComboBoxItem>
                    <ComboBoxItem>qwen3-vl:8b</ComboBoxItem>
                    <ComboBoxItem>rnj-1:8b</ComboBoxItem>
                    <ComboBoxItem>devstral-small-2:24b</ComboBoxItem>
                </ComboBox.Items>
            </ComboBox>
        </UniformGrid>
    </Grid>
</Window>
